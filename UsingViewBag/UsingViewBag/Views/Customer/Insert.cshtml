
@{
    Layout = null;
    var Customer = ViewBag.Customer;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <title>Insert</title>
</head>
<body>
<div>
    <form method="post">
        <div class="form-horizontal">
            <h4>Customer Insert</h4>
            <hr/>
            @Html.ValidationSummary()
            <div class="form-group">
                <div class="col-md-2 control-label">Name:</div>
                <div class="col-md-6">
                    @if (Customer != null)
                    {
                        <input type="text" name="Name" value="@Customer.Name" ,class="form-controll" />
                    }
                    else
                    {
                        <input type="text" name="Name" ,class="form-controll" />
                    }
                    
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">Address:</div>
                <div class="col-md-6">
                    <input type="text" name="Address" class="form-controll" />
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">Email:</div>
                <div class="col-md-6">
                    <input type="text" name="Address" class="form-controll" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit"/>
            </div>
        </div>
    </form>
</div>
</body>
</html>
